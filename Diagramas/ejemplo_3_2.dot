digraph ejemplo_3_2 {
    // Configuración general
    rankdir=TB;
    node [fontname="Arial", fontsize=11];
    
    // Inicio
    inicio [label="INICIO", shape=ellipse, style=filled, fillcolor="#90EE90"];
    
    // Inicialización de variables
    init_nomina [label="NOMINA = 0\n(Acumulador de sueldos)", shape=box];
    init_i [label="I = 1\n(Contador de trabajadores)", shape=box];
    
    // Ciclo FOR
    ciclo [label="¿I ≤ 10?", shape=diamond, style=filled, fillcolor="#FFD700"];
    
    // Dentro del ciclo
    entrada [label="Leer SUE\n(Sueldo del trabajador I)", shape=parallelogram, style=filled, fillcolor="#87CEEB"];
    
    acumular [label="NOMINA = NOMINA + SUE\n(Sumar sueldo al acumulador)", shape=box];
    
    incremento [label="I = I + 1\n(Siguiente trabajador)", shape=box];
    
    // Salida
    salida [label="Imprimir:\n\"Nómina Total: \", NOMINA", shape=egg, style=filled, fillcolor="#FFB6C1"];
    
    // Fin
    fin [label="FIN", shape=ellipse, style=filled, fillcolor="#FF6B6B"];
    
    // Conexiones
    inicio -> init_nomina;
    init_nomina -> init_i;
    init_i -> ciclo;
    ciclo -> entrada [label="SÍ"];
    entrada -> acumular;
    acumular -> incremento;
    incremento -> ciclo;
    ciclo -> salida [label="NO"];
    salida -> fin;
}
