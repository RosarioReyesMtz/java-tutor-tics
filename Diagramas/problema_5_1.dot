digraph Diagrama_5_1_Suma {
    graph [fontname="Arial"];
    node [fontname="Arial", shape=ellipse, style=solid];
    edge [fontname="Arial"];

    inicio [label="INICIO (Matrices A1 y B1 le√≠das,\l Matriz C en ceros)"];
    fin [label="FIN (Imprimir C)"];

    node [shape=rect, style=solid];
    init_ptrs [label="I \L\L- 1, J \L\L- 1"];
    proc_c_sum [label="C[A1[I].REN, A1[I].COL] \L\L- A1[I].VAL + B1[J].VAL\lI \L\L- I + 1, J \L\L- J + 1\l"];
    proc_c_a [label="C[A1[I].REN, A1[I].COL] \L\L- A1[I].VAL\lI \L\L- I + 1\l"];
    proc_c_b [label="C[B1[J].REN, B1[J].COL] \L\L- B1[J].VAL\lJ \L\L- J + 1\l"];
    
    node [shape=diamond, style=solid];
    cond_main_loop [label="(I <= K) y (J <= L)"];
    cond_ren [label="A1[I].REN = B1[J].REN"];
    cond_col [label="A1[I].COL = B1[J].COL"];
    cond_col_cmp [label="A1[I].COL < B1[J].COL"];
    cond_ren_cmp [label="A1[I].REN < B1[J].REN"];
    cond_resto_a [label="I <= K"];
    cond_resto_b [label="J <= L"];
    
    inicio -> init_ptrs -> cond_main_loop;
    
    cond_main_loop -> cond_ren [label="Si"];
    cond_ren -> cond_col [label="Si"];
    cond_col -> proc_c_sum [label="Si"];
    proc_c_sum -> cond_main_loop;
    
    cond_col -> cond_col_cmp [label="No"];
    cond_col_cmp -> proc_c_a [label="Si"];
    proc_c_a -> cond_main_loop;
    cond_col_cmp -> proc_c_b [label="No"];
    proc_c_b -> cond_main_loop;

    cond_ren -> cond_ren_cmp [label="No"];
    cond_ren_cmp -> proc_c_a [label="Si"];
    cond_ren_cmp -> proc_c_b [label="No"];
    
    cond_main_loop -> cond_resto_a [label="No"];
    cond_resto_a -> proc_c_a [label="Si"];
    proc_c_a -> cond_resto_a;
    
    cond_resto_a -> cond_resto_b [label="No"];
    cond_resto_b -> proc_c_b [label="Si"];
    proc_c_b -> cond_resto_b;
    
    cond_resto_b -> fin [label="No"];
}